        <label name="active"/>
        <field name="active"/>
        <label name="stop_further"/>
        <field name="stop_further"/>
        <label name="sequence"/>
        <field name="sequence"/>
    </group>
    <label name="from_date"/>
    <field name="from_date"/>
    <label name="to_date"/>
    <field name="to_date"/>
    <label name="shop"/>
    <field name="shop"/>
    <label name="category"/>
    <field name="category"/>
    <label name="coupon"/>
    <field name="coupon"/>
    <label name="max_coupon"/>
    <field name="max_coupon"/>
    <label name="max_party_coupon"/>
    <field name="max_party_coupon"/>
