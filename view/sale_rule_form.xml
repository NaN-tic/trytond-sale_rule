        <page string="Conditions" id="conditions">
            <label name="quantifier"/>
            <field name="quantifier"/>
            <field name="conditions" colspan="4"/>
        </page>
        <page string="Actions" id="actions">
            <field name="actions" colspan="4"/>
        </page>
    </notebook>
